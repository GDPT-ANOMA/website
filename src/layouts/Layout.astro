---
import navigationTabs from "../data/navigationTabs.json";
import { Icon } from "astro-icon/components";
interface Props {
    title: string;
    class: string;
}

const { title, class: className } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="A website for GĐPT Anôma" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/logos/gdpt.svg" />
        <title>{title}</title>
    </head>
    <body class="bg-gray-100">
        <div class="grid grid-cols-[minmax(22rem,400px)_1fr]">
            <!-- Navigation -->
            <nav
                class="sticky top-0 min-h-screen bg-white shadow-xl flex flex-col items-center rounded-r-[4.5rem]"
            >
                <a href="#" class="py-16">
                    <img src="/logos/gdpt.svg" alt="Logo" class="h-48 w-auto" />
                </a>
                <div class="text-[2rem] grid grid-cols-1 gap-y-6">
                    {
                        navigationTabs.map((page) => (
                            <div class="">
                                <a
                                    href={page.url}
                                    class="flex items-center text-gray-700 font-semibold rounded-full hover:bg-gdpt hover:text-white py-2 px-8 transition-colors duration-300"
                                >
                                    <Icon
                                        class="w-6 h-6 mr-6"
                                        name={page.icon}
                                    />
                                    {page.name}
                                </a>
                            </div>
                        ))
                    }
                </div>
            </nav>

            <!-- Main Body -->
            <main class="my-4 mx-4">
                <slot />
            </main>
        </div>
    </body>
</html>
