---
import navigationTabs from "../data/navigationTabs.json";
import { Icon } from "astro-icon/components";
import "../styles/hamburgers.css";
import Navigation from "../components/default/Navigation.astro";
interface Props {
    title: string;
    class: string;
}

const { title, class: className } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <link href="../styles/hamburgers.css" rel="stylesheet" />
        <meta charset="UTF-8" />
        <meta name="description" content="A website for GĐPT Anôma" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/logos/gdpt.svg" />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/favicons/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicons/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicons/favicon-16x16.png"
        />
        <link rel="manifest" href="/favicons/site.webmanifest" />
        <title>{title}</title>
    </head>
    <body
        class="bg-transparent max-w-screen-2xl px-4 sm:px-6 lg:px-8 mx-auto relative min-h-screen"
    >
        <!-- Fixed Background Image -->
        <div
            class="fixed inset-0 z-[-1] bg-cover bg-center bg-no-repeat opacity-90"
            style="background-image: url('/backgrounds/background.JPG');"
        >
        </div>

        <!-- Semi-transparent overlay for better content readability -->
        <div class="fixed inset-0 z-[-1] bg-white/80"></div>

        <!-- Main Body -->
        <Navigation />
        <main class="my-4 mx-2 pt-8 relative">
            <slot />
        </main>
    </body>

</html>
