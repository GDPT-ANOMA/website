---
import { Image } from "astro:assets";
import navigationTabs from "../../data/navigationTabs.json";

const currentPath = Astro.url.pathname;
---

<div class="flex justify-center sticky top-4 z-50">
    <div
        id="mobile-menu-container"
        class="flex flex-col mx-2 rounded-[36rem] h-[80px] px-6 w-full transition-all duration-300 ease-in-out border-neutral-100 border backdrop-blur-lg text-textColor-700 uppercase font-bold"
    >
        <div
            class="flex items-center justify-between w-full h-[80px] flex-shrink-0"
        >
            <a href="/" class="flex items-center gap-4">
                <Image
                    src="/logos/gdpt.svg"
                    alt="GĐPT Anôma"
                    width={50}
                    height={50}
                />
                <span class="text-2xl font-bold">GDPT ANÔMA</span>
            </a>

            <div class="items-center gap-6 hidden lg:flex">
                {
                    navigationTabs.map((tab) => (
                        <a
                            href={tab.url}
                            class={`text-lg font-bold ${
                                currentPath === tab.url
                                    ? "text-gdpt-500"
                                    : " hover:text-neutral-400"
                            }`}
                        >
                            {tab.name}
                        </a>
                    ))
                }
            </div>
            <div class="lg:hidden flex items-center">
                <button
                    class="hamburger hamburger--collapse"
                    color="#FFFFFF"
                    type="button"
                >
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>
            </div>
        </div>
        <div
            id="mobile-menu"
            class="flex-col items-center gap-4 pb-4 space-y-4 hidden lg:hidden h-0 opacity-0"
        >
            {
                navigationTabs.map((tab) => (
                    <a
                        href={tab.url}
                        class={`text-lg font-bold ${
                            currentPath === tab.url
                                ? "text-gdpt"
                                : " hover:text-neutral-400"
                        }`}
                    >
                        {tab.name}
                    </a>
                ))
            }
        </div>
    </div>
</div>

<script>
    const hamburger = document.querySelector(".hamburger");
    const mobileMenu = document.getElementById("mobile-menu");
    const menuContainer = document.getElementById("mobile-menu-container");

    if (hamburger && mobileMenu && menuContainer) {
        hamburger.addEventListener("click", function () {
            hamburger.classList.toggle("is-active");

            if (mobileMenu.classList.contains("hidden")) {
                // Opening menu
                mobileMenu.classList.remove("hidden");
                mobileMenu.classList.add("flex");
                mobileMenu.style.height = "auto";
                const totalHeight = 80 + mobileMenu.scrollHeight;
                menuContainer.style.height = `${totalHeight}px`;

                // Delay the fade in until after expansion
                setTimeout(() => {
                    mobileMenu.style.opacity = "1";
                }, 300); // Wait for the expansion to complete
            } else {
                // Closing menu - fade out first
                mobileMenu.style.opacity = "0";

                // Wait for fade out, then collapse
                setTimeout(() => {
                    menuContainer.style.height = "80px";
                    setTimeout(() => {
                        mobileMenu.classList.add("hidden");
                        mobileMenu.classList.remove("flex");
                        mobileMenu.style.height = "0";
                    }, 300); // Wait for the collapse to complete
                }, 300); // Wait for the fade out to complete
            }
        });
    }
</script>

<style>
    #mobile-menu-container {
        align-items: center;
        border-radius: 36px;
        transition: height 0.3s ease-in-out;
    }

    #mobile-menu {
        transition: opacity 0.3s ease-in-out;
    }
</style>
