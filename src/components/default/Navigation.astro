---
import { Image } from "astro:assets";
import navigationTabs from "../../data/navigationTabs.json";

const currentPath = Astro.url.pathname;
---

<div class="flex justify-center sticky top-4 z-50">
    <div
        id="mobile-menu-container"
        class="flex flex-col mx-2 rounded-[36rem] h-[80px] px-6 w-full transition-all duration-300 ease-in-out bg-white/90 dark:bg-neutral-900/90 backdrop-blur-sm text-textColor-800 uppercase font-bold"
    >
        <div
            class="flex items-center justify-between w-full h-[80px] flex-shrink-0"
        >
            <a href="/" class="flex items-center gap-4">
                <Image
                    src="/logos/gdpt.svg"
                    alt="GĐPT Anôma"
                    width={50}
                    height={50}
                />
                <span class="text-2xl font-bold">GDPT ANÔMA</span>
            </a>

            <div class="items-center gap-6 hidden lg:flex">
                {
                    navigationTabs.map((tab) => (
                        <a
                            href={tab.url}
                            class={`text-lg font-bold ${
                                currentPath === tab.url
                                    ? "text-gdpt-500"
                                    : " hover:text-neutral-400"
                            }`}
                        >
                            {tab.name}
                        </a>
                    ))
                }
            </div>
            <div class="lg:hidden flex items-center">
                <button
                    class="hamburger hamburger--collapse"
                    color="#FFFFFF"
                    type="button"
                >
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>
            </div>
        </div>
        <div
            id="mobile-menu"
            class="flex-col items-center gap-4 py-4 space-y-4 hidden lg:hidden absolute top-[80px] left-0 w-full bg-white backdrop-blur-2xl transition-all duration-300 rounded-[36px] mt-2"
        >
            {
                navigationTabs.map((tab) => (
                    <a
                        href={tab.url}
                        class={`text-lg font-bold ${
                            currentPath === tab.url
                                ? "text-gdpt-500"
                                : "hover:text-neutral-400"
                        }`}
                    >
                        {tab.name}
                    </a>
                ))
            }
        </div>
    </div>
</div>

<script>
    const hamburger = document.querySelector(".hamburger");
    const mobileMenu = document.getElementById("mobile-menu");
    const menuContainer = document.getElementById("mobile-menu-container");
    let isAnimating = false;

    if (hamburger && mobileMenu && menuContainer) {
        hamburger.addEventListener("click", function () {
            if (isAnimating) return; // Prevent clicks during animation
            isAnimating = true;
            hamburger.classList.toggle("is-active");

            if (mobileMenu.classList.contains("hidden")) {
                // Opening menu
                mobileMenu.classList.remove("hidden");
                mobileMenu.classList.add("flex");

                requestAnimationFrame(() => {
                    mobileMenu.style.opacity = "1";
                    // Reset isAnimating after animation completes
                    setTimeout(() => {
                        isAnimating = false;
                    }, 300);
                });
            } else {
                // Closing menu
                mobileMenu.style.opacity = "0";

                setTimeout(() => {
                    mobileMenu.classList.add("hidden");
                    mobileMenu.classList.remove("flex");
                    isAnimating = false; // Reset isAnimating after animation completes
                }, 300);
            }
        });
    }
</script>

<style>
    #mobile-menu-container {
        align-items: center;
        border-radius: 36px;
    }

    #mobile-menu {
        transform: translateY(-10px);
        transition:
            opacity 0.3s ease-in-out,
            transform 0.3s ease-in-out;
    }

    #mobile-menu.flex {
        transform: translateY(0);
    }
</style>
