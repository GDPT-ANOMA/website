---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page Not Found" class="bg-background">
    <div class="min-h-[calc(100vh-20rem)] flex items-center justify-center px-4">
        <div class="text-center space-y-4 max-w-2xl mx-auto">
            <div class="relative ">

                <h1 class="text-[150px] md:text-[200px] font-black text-gdpt-500 opacity-60 select-none ">
                    404
                </h1>
            </div>
            
            <div class="card bg-base-100 shadow-xl p-6 backdrop-blur-sm bg-white/30">
                <p class="text-lg text-gray-600">
                    We couldn't find the page you were looking for. It might have been moved, deleted, or never existed in the first place.
                </p>
                
                <div class="divider"></div>
                
                <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                    <a href="/" class="btn btn-primary bg-gdpt-500 hover:bg-gdpt-400 border-none rounded-full gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
                        </svg>
                        Return Home
                    </a>
                    <button onclick="history.back()" class="btn btn-outline rounded-full gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                        </svg>
                        Go Back
                    </button>
                </div>
            </div>
        </div>
    </div>
</Layout>
