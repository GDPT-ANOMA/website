---
import Layout from "../layouts/Layout.astro";
import { Button } from "../components/ui/button";
---

<Layout title="404 - Page Not Found" class="bg-background">
    <div
        class="min-h-[calc(100vh-10rem)] flex flex-col items-center justify-center text-center px-4"
    >
        <div class="text-5xl font-bold mb-4">404</div>
        <div class="space-y-4">
            <h2 class="text-2xl font-semibold">Page Not Found</h2>
            <p class="text-muted-foreground max-w-md">
                Oops! The page you're looking for seems to have disappeared.
            </p>
        </div>
        <a href="/" class="">
            <Button
                className="mt-4 bg-gdpt-500 hover:bg-gdpt-400 text-white rounded-2xl"
            >
                Return Home
            </Button>
        </a>
    </div>
</Layout>
