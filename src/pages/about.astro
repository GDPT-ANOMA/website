---
import Layout from "../layouts/Layout.astro";
import { Icon as AstroIcon } from "astro-icon/components";
---

<Layout title="About Us - GĐPT Anôma" class="">
    <!-- Hero Section -->
    <div class="hero min-h-[70vh] bg-gdpt text-white rounded-t-3xl">
        <div class="hero-content text-center">
            <div class="max-w-3xl">
                <h1 class="text-5xl md:text-6xl font-bold mb-6 tracking-tight animate-fade-in">About GĐPT Anôma</h1>
                <p class="text-xl md:text-2xl text-gray-100 leading-relaxed animate-fade-in-up">
                    Fostering Buddhist values and personal growth in our community since 1986
                </p>
            </div>
        </div>
    </div>

    <!-- Objectives Section -->
    <div class="py-20 bg-gray-50">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl font-bold text-center mb-16">Our Objectives</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                <div class="card bg-white shadow-xl hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">
                    <div class="card-body p-8">
                        <div class="flex flex-col md:flex-row gap-6 h-full">
                            <div class="flex items-center justify-center">
                                <div class="w-16 h-16 bg-gdpt text-white rounded-2xl flex items-center justify-center flex-shrink-0">
                                    <AstroIcon name="fa-solid:user" class="w-8 h-8" />
                                </div>
                            </div>
                            <div class="flex-1 flex flex-col justify-center text-center md:text-left">
                                <h3 class="text-3xl font-bold text-gdpt mb-4">Individual Development</h3>
                                <p class="text-gray-600 leading-relaxed">
                                    Training youths to be true Buddhists through personal development and spiritual growth.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card bg-white shadow-xl hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">
                    <div class="card-body p-8">
                        <div class="flex flex-col md:flex-row gap-6 h-full">
                            <div class="flex items-center justify-center">
                                <div class="w-16 h-16 bg-gdpt text-white rounded-2xl flex items-center justify-center flex-shrink-0">
                                    <AstroIcon name="fa-solid:users" class="w-8 h-8" />
                                </div>
                            </div>
                            <div class="flex-1 flex flex-col justify-center text-center md:text-left">
                                <h3 class="text-3xl font-bold text-gdpt mb-4">Societal Impact</h3>
                                <p class="text-gray-600 leading-relaxed">
                                    Training youths to be productive citizens who will make positive contributions to society.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Core Virtues -->
    <div class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl font-bold text-center mb-16">Our Core Virtues: Bi-Trí-Dũng</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {[
                    {
                        icon: "fa-solid:heart",
                        title: "Compassion (Từ Bi)",
                        description: "Sympathetic concern for the suffering of others, bringing happiness and reducing miseries for all beings."
                    },
                    {
                        icon: "fa-solid:brain",
                        title: "Wisdom (Trí Tuệ)",
                        description: "Understanding what is true and right, helping others cultivate their wisdom and understanding."
                    },
                    {
                        icon: "fa-solid:fist-raised",
                        title: "Bravery (Dũng Mạnh)",
                        description: "Courage and diligence in all endeavors, never being fearful or cowardly."
                    }
                ].map((value) => (
                    <div class="group">
                        <div class="card bg-white shadow-xl hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 h-full">
                            <div class="card-body items-center text-center p-8">
                                <div class="w-20 h-20 mb-6 bg-gdpt/10 rounded-2xl p-4 group-hover:bg-gdpt/20 transition-colors duration-300">
                                    <AstroIcon name={value.icon} class="w-full h-full text-gdpt" />
                                </div>
                                <h3 class="card-title text-2xl mb-4 group-hover:text-gdpt transition-colors duration-300">{value.title}</h3>
                                <p class="text-gray-600">{value.description}</p>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>

    <!-- Five Morals -->
    <div class="py-20 bg-gray-50">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl font-bold text-center mb-16">The Five Morals</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {[
                    {
                        icon: "fa-solid:running",
                        title: "Diligence",
                        description: "Always progress toward the goals of the Vietnamese Buddhist Youth Association and Buddhism."
                    },
                    {
                        icon: "fa-solid:dove",
                        title: "Forgiveness",
                        description: "Always be happy, forgiving, and joyful; trying to bring happiness to all beings and know when to sacrifice for others."
                    },
                    {
                        icon: "fa-solid:water",
                        title: "Purity",
                        description: "Always be pure in body, speech, thought, and action. Always lead a simple and modest life."
                    },
                    {
                        icon: "fa-solid:lightbulb",
                        title: "Wisdom",
                        description: "Always have a broad knowledge and an accurate understanding of all subjects."
                    },
                    {
                        icon: "fa-solid:hands-helping",
                        title: "Compassion",
                        description: "Always bring happiness to reduce miseries for all beings. Use kind words and gracious gestures to bring peace and happiness."
                    }
                ].map((moral) => (
                    <div class="card bg-white shadow-xl hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">
                        <div class="card-body p-8">
                            <div class="flex flex-col items-center text-center">
                                <div class="w-16 h-16 bg-gdpt/10 rounded-2xl p-4 mb-4">
                                    <AstroIcon name={moral.icon} class="w-full h-full text-gdpt" />
                                </div>
                                <h3 class="text-2xl font-bold text-gdpt mb-3">{moral.title}</h3>
                                <p class="text-gray-600">{moral.description}</p>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>

    <!-- Required Practices -->
    <div class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl font-bold text-center mb-16">Our Practices</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
                {[
                    {
                        text: "Have respect, be polite, kind and happy towards others."
                    },
                    {
                        text: "Learn to tolerate, love, be honest and always ready to help each other."
                    },
                    {
                        text: "Learn to be studious and happily fulfill any task given."
                    },
                    {
                        text: "Learn to read, write and speak Vietnamese to enhance communication ability and preserve Vietnamese culture."
                    },
                    {
                        text: "Fulfill a responsibility to protect and maintain the association's properties."
                    }
                ].map((practice) => (
                    <div class="card bg-white shadow-xl hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">
                        <div class="card-body p-6">
                            <div class="flex items-start gap-4">
                                <div class="w-8 h-8 bg-gdpt text-white rounded-full flex items-center justify-center flex-shrink-0">
                                    <AstroIcon name="fa-solid:check" class="w-4 h-4" />
                                </div>
                                <p class="text-gray-700 flex-1">{practice.text}</p>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="bg-gradient-to-br from-gdpt to-gdpt-600 text-white py-24 rounded-b-[3rem] relative overflow-hidden">
        <div class="absolute inset-0 bg-[url('/hero-bg.jpg')] opacity-10 bg-cover bg-center"></div>
        <div class="absolute inset-0 bg-gradient-to-br from-gdpt/90 to-gdpt-600/90"></div>
        <div class="container mx-auto px-4 text-center relative z-10">
            <h2 class="text-4xl font-bold mb-8">Be Part of Our Community</h2>
            <p class="mb-12 max-w-2xl mx-auto text-lg text-gray-100 leading-relaxed">
                Join us in our mission to cultivate mindfulness, wisdom, and compassion
            </p>
            <div class="flex gap-4 justify-center">
                <a href="/contact" 
                   class="btn btn-lg glass text-white border-2 border-white hover:bg-white hover:text-gdpt hover:scale-105 transition-all duration-300 shadow-lg">
                    <AstroIcon name="fa-solid:envelope" class="w-5 h-5 mr-2" />
                    Get Involved
                </a>
            </div>
        </div>
    </div>
</Layout>

<style>
    .hero {
        background-image: linear-gradient(rgba(0, 124, 61, 0.9), rgba(0, 124, 61, 0.9)), url('/hero-bg.jpg');
        background-size: cover;
        background-position: center;
    }

    .animate-fade-in {
        animation: fadeIn 1s ease-out;
    }

    .animate-fade-in-up {
        animation: fadeInUp 1s ease-out 0.3s both;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
