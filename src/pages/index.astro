---
import Layout from "../layouts/Layout.astro";
import BlogPosts from "../components/default/BlogPosts.astro";
import GoogleCalendar from "../components/react/Calendar";
const CALENDAR_API_KEY = import.meta.env.CALENDAR_API_KEY;
---

<Layout title="GĐPT Anôma" class="w-full p-6">
    <!-- Calendar -->

    <div class="flex justify-end min-h-[40rem] min-w-full max-w-full">
        <div class="bg-white min-w-[40rem] max-w-[40rem] rounded-3xl w-1/2">
            <div
                class="pt-8 text-[3rem] font-bold text-gdpt justify-center items-center text-center"
            >
                Upcoming Events:
            </div>
            <div class="flex max-w-fullitems-center justify-center my-4">
                <div class="w-[90%] rounded-lg p-4">
                    <GoogleCalendar
                        client:load
                        CALENDAR_API_KEY={CALENDAR_API_KEY}
                    />
                </div>
            </div>
        </div>
    </div>
</Layout>
