---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const calendarEvents = await getCollection('calendar');
---

<Layout title="Calendar Events">
  <h1>Calendar Events</h1>
  
  <div class="events">
    {(calendarEvents as CalendarEvent[]).map(event => (
      <div class="event">
        <h2>{event.data.summary}</h2>
        {event.data.description && <p>{event.data.description}</p>}
        <p>
          Start: {new Date(event.data.start.dateTime || event.data.start.date || '').toLocaleString()}
        </p>
        {event.data.location && <p>Location: {event.data.location}</p>}
      </div>
    ))}
  </div>
</Layout>

<style>
  .events {
    max-width: 800px;
    margin: 0 auto;
  }
  .event {
    padding: 1rem;
    margin: 1rem 0;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
</style> 